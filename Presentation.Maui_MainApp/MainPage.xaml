<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Presentation.Maui_MainApp.ViewModels"
             x:DataType="{x:Type viewmodels:MainViewModel}"
             x:Class="Presentation.Maui_MainApp.MainPage">
  
    <Grid RowDefinitions="auto, auto" Margin="0,20">
        
        <Button Text="Add Contact" Command="{Binding NavigateToAddContactCommand}" Grid.Row="0" Margin="10, 20"/>
        <Button Text="View Contacts" Command="{Binding NavigateToViewContactsCommand}" Grid.Row="1" Margin=" 10, 20"/>
    </Grid>

</ContentPage>
